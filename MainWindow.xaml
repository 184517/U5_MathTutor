<Window x:Class="U5_MathTutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:U5_MathTutor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Label x:Name="lblQuestion" Height="45" Width="321" />
        <Button x:Name="btnQuestion" Click="btnQuestion_Click" Content="Generate Question" Background="HotPink"
                Canvas.Left="321" Height="45" Width="196" />
        <TextBox x:Name="txtAnswer" Text="Enter answer to the nearest tenth" Canvas.Top="50" Height="57" Width="321" />
        <Button x:Name="btnAnswer" Click="btnAnswer_Click" Content="Check Answer" Background="RoyalBlue"
                Canvas.Left="321" Canvas.Top="50" Height="57" Width="196" />
        <Label x:Name="lblOutput" Canvas.Top="107" Height="59" Width="517" />
    </Canvas>
</Window>
